<style>
    body {
        background-image: url('/Background_Images/light_blue.jpg');
        background-size: cover;
        background-repeat: no-repeat;
        background-position: center center;
        font-family: Monospace;
    }

    h2 {
        font-family: Impact, Charcoal, sans-serif;
        font-size: 50px;
        color: black;
    }

    label {
        font-size: x-large;
        margin-top: 10px;
    }

    input {
        font-size: 20px;
        height: 40px;
        width: 300px;
        outline: none;
        border: none;
    }

    .form-control {
        width: 300px;
        margin-left: 21%;
    }

    .form {
        color: #fff;
        margin: auto;
        width: 450px;
        height: 280px;
        padding: 5%
    }

    thead {
        font-size: xx-large;
        font-weight: 900;
        color: #fff;
    }

    tbody {
        font-size: x-large;
        font-weight: 600;
    }

    .dataTables_paginate a {

        background: #ddd !important;
        border-color: #ddd !important;
    }

    .dataTables_wrapper .dataTables_length,
    .dataTables_wrapper .dataTables_filter,
    .dataTables_wrapper .dataTables_info,
    .dataTables_wrapper .dataTables_processing,
    .dataTables_wrapper .dataTables_paginate {
        color: rgb(110, 66, 0);
        font-size: large;
        margin-bottom: 9px;
    }

    .dataTables_wrapper .dataTables_filter input {
        border: 1px solid #fff;
        border-radius: 3px;
        padding: 5px;
        background-color: #fff;
        margin-left: 3px;
    }
    .add_assignment{
        font-size: x-large;
    }
</style>

<section>
    <div class="container">
        <h2 class="text-center mt-5 pt-5">Assignments</h2>
        <div class="row">
            <div class="col-md-6  mt-2 mb-5">
                <div class="form bg-danger mt-5 pt-5">
                    <h2 class="text-center add_assignment">Add Assignment</h2>
                    <form action="" method="POST" enctype="multipart/form-data">
                        <label for="">Topic :</label>
                        <input type="text" name="topic" id="topic"><br>
                        <label for="" id="fileid">File :</label>
                        <input class="form-control" type="file" name="file" id="file" accept="application/pdf"><br>
                        <div class="text-center">
                            <button type="submit" class="btn btn-success">UPLOAD</button>
                        </div>
                    </form>
                </div>
            </div>
            <div class="col-md-12 text-center">
                <table id="myTable" class="table text-center mt-5 pt-3">
                    <thead class="bg-warning">
                        <tr>
                            <th>Topic</th>
                            <th>File</th>
                            <th>Date</th>
                            <th>Option</th>
                        </tr>
                    </thead>

                    <tbody>
                        {{#each assignment}}
                        <tr class="bg-warning">
                            <td class="text-danger">{{this.assignment.topic}}</td>
                            <td><a href="#"
                                    onclick="window.open('/assignments/tutor/{{this.assignment.topic}}.pdf')">{{this.assignment.topic}}.pdf</a>
                            </td>
                            <td class="text-success">{{this.assignment.date}}</td>
                            <td>
                                <a href="/assignments/tutor/{{this.assignment.topic}}.pdf">
                                    <img style="width: 50px;" src="/images/icloud-download.png" alt="">
                                </a>
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>

                </table>
            </div>
        </div>
    </div>
</section>