<style>
    body {
        background-image: url('/Background_Images/light_green.jpg');
        background-size: cover;
        background-position: center center;
        font-family: Monospace;
    }

    h2 {
        font-family: Impact, Charcoal, sans-serif;
        font-size: 50px;
        color: black;
    }

    thead {
        font-size: xx-large;
        font-weight: 900;
    }

    tbody {
        font-size: x-large;
        font-weight: 600;
    }

    .date {
        color: rgb(255, 32, 32);
    }

    .message {
        color: rgb(149, 77, 185);
    }

    .dataTables_paginate a {

        background: #ddd !important;
        border-color: #ddd !important;
    }

    .btn {
        font-size: x-large;
    }

    .dataTables_wrapper .dataTables_length,
    .dataTables_wrapper .dataTables_filter,
    .dataTables_wrapper .dataTables_info,
    .dataTables_wrapper .dataTables_processing,
    .dataTables_wrapper .dataTables_paginate {
        color: rgb(110, 66, 0);
        font-size: large;
        margin-bottom: 9px;
    }

    .dataTables_wrapper .dataTables_filter input {
        outline: none;
        border-radius: 3px;
        padding: 5px;
        background-color: #fff;
        margin-left: 3px;
    }
</style>
<section>
    <div class="container mt-5 pt-5">
        <h2 class="text-center ">Announcement</h2>
        <div class="row">
            <div class="col-md-6 col-12 mt-5 pt-5">
                <a href="/add-announcement" class="btn btn-primary">Add Announcement</a>
            </div>
            <div class="col-md-12 mt-2 pt-5">
                <table id="myTable" class="table table-responsive text-center">
                    <thead class="bg-danger text-white">
                        <tr>
                            <th>Date</th>
                            <th>Subject</th>
                            <th>Delete</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each announcement}}
                        <tr class="bg-warning">
                            <td class="date">{{this.date}}</td>
                            <td class="message"><a href="/announcement-details/{{this._id}}">{{this.message}}</a></td>
                            <td>
                                <a href="/delete-announcement/{{this._id}}" onclick="alert('Are you sure')"><img
                                        style="width: 40px; margin-left: 10px;"
                                        src="https://img.icons8.com/ios/48/ffffff/delete-forever.png" alt=""></a>
                            </td>
                        </tr>
                        {{/each}}

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>