<section>
    <div class="container mt-5 pt-5">
        <h2 class="text-center">Add Student</h2>
        <form action="/add-student" enctype="multipart/form-data" method="POST">
            <div class="row">
                <div class="col-md-6 text-center">
                    <label for="file">
                        <div class="profile-pic">
                            <img id="profile-pic" alt="Profile picture" src="/student-profile/profile"
                            style="width: 300px; border-radius: 200px; margin-top: 100px;" />
                            <div class="edit">
                                <img class="text-center" src="https://img.icons8.com/android/48/000000/edit.png" />
                            </div>
                        </div>
                    </label>
                    <h3>
                        Student profile picture <br>
                        Tap to Change Profile
                    </h3>

                    <input type="file" id="file" class="mt-4" name="file" onchange="viewImage(event)" accept="image/*">
                </div>

                <div class="col-lg-6">
                    <div class=" mt-5 pt-4 mx-auto">
                        {{!-- <label for="">Name :</label> --}}
                        <input type="text" class="input" name="name" value="" id="name" placeholder=" Name" required><br>
                        <label class="gen" for="">Gender :</label><br>
                        <input type="radio" name="radio" id="rad" value="male">
                        <label for="">Male</label>
                        <input type="radio" name="radio" id="rad" value="female">
                        <label for="">Female</label><br>
                        {{!-- <label for="">Role :</label> --}}
                        <input type="number" name="rollno" value="" id="roll" placeholder=" Roll" required><br>
                        {{!-- <label for="">Mobile :</label> --}}
                        <input type="tel" name="mobile" value="" id="mob" placeholder=" Mob" required><br>
                        {{!-- <label for="">Email :</label> --}}
                        <input type="email" name="email" value="" id="mail" placeholder=" E-mail" required><br>
                        {{!-- <label for="">Address :</label> --}}
                        <input type="text" name="address" value="" id="address" placeholder=" Address" required><br>
                    </div>
                </div>

                <div class="col-12 col-sm-12 col-lg-6 mt-5 mb-5">
                    <div class="div bg-danger mt-5">
                        <input type="text" class="input" name="username" value="" placeholder=" UserName" id="username" required>
                        <input type="text" class="input" name="password" value="" placeholder=" Password" id="password" required>
                        <button type="submit" class="btn mt-5">ADD STUDENT</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</section>

<script>
    function viewImage(event) {
        document.getElementById('profile-pic').src = URL.createObjectURL(event.target.files[0])
    }
</script>